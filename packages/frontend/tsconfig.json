{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/components/*": ["src/components/*"]
    },
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
